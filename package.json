{
  "scripts": {
    "build": "tsc --build",
    "clean": "lerna run clean --stream",
    "copy": "lerna run copy --stream",
    "copy-watch": "lerna run copy --parallel -- --watch",
    "dev": "yarn copy-watch & yarn build --watch",
    "docs:build": "DOCS_BUNDLER=@vuepress/webpack vuepress build docs --clean-cache",
    "docs:clean": "rimraf docs/.vuepress/.temp docs/.vuepress/.cache docs/.vuepress/dist",
    "docs:dev": "DOCS_BUNDLER=@vuepress/webpack vuepress dev docs --clean-cache",
    "docs:serve": "anywhere -h localhost -d docs/.vuepress/dist",
    "docs:release": "yarn copy && yarn build && yarn docs:build",
    "lint": "eslint --ext .js,.ts,.vue .",
    "release": "yarn lint && yarn clean && yarn copy && yarn build && yarn test && lerna publish prerelease --dist-tag next",
    "test": "jest --runInBand",
    "test:coverage": "yarn copy && yarn build && yarn test --coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{json,yml,css,scss}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "prettier-config-vuepress",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^27.0.1",
    "anywhere": "^1.5.0",
    "cpx2": "3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-vuepress": "^3.3.0",
    "eslint-config-vuepress-typescript": "^2.3.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-serializer-vue": "^2.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.2.1",
    "prettier-config-vuepress": "^1.2.0",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@artisancloud/vuepress-theme-docs": "^1.0.0-beta1",
    "@vuepress/client": "2.0.0-beta.27",
    "@vuepress/plugin-debug": "2.0.0-beta.27",
    "@vuepress/plugin-docsearch": "2.0.0-beta.27",
    "@vuepress/plugin-google-analytics": "2.0.0-beta.27",
    "@vuepress/plugin-register-components": "2.0.0-beta.27",
    "@vuepress/plugin-shiki": "2.0.0-beta.27",
    "postcss-loader": "^6.2.1",
    "vuepress": "2.0.0-beta.27",
    "vuepress-vite": "2.0.0-beta.27"
  }
}
